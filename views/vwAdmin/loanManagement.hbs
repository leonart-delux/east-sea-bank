<div class="infor-list mt-6">
    <h3 class="mb-1">Danh sách khoản vay</h3>
    <div class="">
        <!-- Tabs -->
        <ul class="nav nav-tabs" id="loanTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">Đã xong</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="due-tab" data-bs-toggle="tab" data-bs-target="#due" type="button" role="tab">Đến hạn</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="overdue-tab" data-bs-toggle="tab" data-bs-target="#overdue" type="button" role="tab">Quá hạn</button>
            </li>
        </ul>

        <!-- Nội dung của từng tab -->
        <div class="tab-content mt-3">
            <!-- Tab Đã xong -->
            <div class="tab-pane fade show active" id="completed" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã khoản vay</th>
                            <th>Tên khách hàng</th>
                            <th>Số tiền vay</th>
                            <th>Kỳ hạn vay</th>
                            <th>Lãi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Completed}}
                        <tr>
                            <td>{{Ma_Vay}}</td>
                            <td>{{Ho_Ten}}</td>
                            <td>{{Khoan_Vay}}</td>
                            <td>{{Ky_Han}} tháng</td>
                            <td>{{Lai_Suat}}%</td>
                            <td><a href="/admin/loans/details?Ma_Vay={{Ma_Vay}}">Chi tiết</a></td>
                        </tr>
                        {{/each}}
                        <!-- Thêm các dòng khác nếu cần -->
                    </tbody>
                </table>
            </div>

            <!-- Tab Đến hạn -->
            <div class="tab-pane fade" id="due" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã khoản vay</th>
                            <th>Tên khách hàng</th>
                            <th>Số tiền vay</th>
                            <th>Kỳ hạn vay</th>
                            <th>Lãi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Due}}
                        <tr>
                            <td>{{Ma_Vay}}</td>
                            <td>{{Ho_Ten}}</td>
                            <td>{{Khoan_Vay}}</td>
                            <td>{{Ky_Han}} tháng</td>
                            <td>{{Lai_Suat}}%</td>
                            <td><a href="/loan/details?Ma_Vay={{Ma_Vay}}">Chi tiết</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Tab Quá hạn -->
            <div class="tab-pane fade" id="overdue" role="tabpanel">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã khoản vay</th>
                            <th>Tên khách hàng</th>
                            <th>Số tiền vay</th>
                            <th>Kỳ hạn vay</th>
                            <th>Lãi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Overdue}}
                        <tr>
                            <td>{{Ma_Vay}}</td>
                            <td>{{Ho_Ten}}</td>
                            <td>{{Khoan_Vay}}</td>
                            <td>{{Ky_Han}} tháng</td>
                            <td>{{Lai_Suat}}%</td>
                            <td><a href="/loan/details?Ma_Vay={{Ma_Vay}}">Chi tiết</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Liên kết Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>