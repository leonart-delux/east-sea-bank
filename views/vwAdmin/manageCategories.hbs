<!-- JavaScript -->
<script>
    function showEditInput(button) {
        // Tìm phần tử cha của nút "Edit" là li
        const listItem = button.closest("li");

        // Kiểm tra xem đã có ô nhập liệu chưa để không tạo lại
        if (listItem.nextElementSibling && listItem.nextElementSibling.classList.contains("edit-input")) {
            return; // Nếu đã tồn tại, không tạo thêm
        }

        // Tạo div mới chứa input và nút "Lưu"
        const inputDiv = document.createElement("div");
        inputDiv.className = "edit-input d-flex align-items-center mb-2";
        inputDiv.innerHTML = `
            <input type="text" class="form-control me-2" placeholder="Nhập nội dung mới">
            <button class="btn btn-primary btn-sm" onclick="saveEdit(this)">Lưu</button>
        `;

        // Thêm div mới ngay sau li chứa nút "Edit"
        listItem.insertAdjacentElement("afterend", inputDiv);
    }

    function saveEdit(button) {
        alert("Nội dung đã được lưu!");
        // Xóa div input sau khi lưu
        button.parentElement.remove();
    }
</script>