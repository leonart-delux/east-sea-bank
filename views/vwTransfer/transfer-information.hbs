<div class="container mt-5  transfer__container  mx-auto shadow ">
    <div class="row pt-3">
        <a href="#" class="ml-3"><img src="/images/arrow.png" style="width: 25px; height: 25px"></a>
        <span class="  mt-1  col-4" style="font-weight: bold ">Chuyển tiền-Nội bộ ESB</span>
    </div>
    <div class="container w-50 mx-auto mt-3">
        <div class="transfer__container__title mb-4">Thông tin giao dịch</div>
        <form method="post" action="">

            <div class="form-group  container">
                <label for="moneyInput" class="">Số tiền</label>
                <br>
                <div class="row ">
                    <input class="col-10 transfer__container__money__input " id="moneyInput" name="moneyAmount">
                    <div class="col-2 currency-unit text-right">
                        VND
                    </div>
                </div>
            </div>
            <div id="input--container" class="row d-flex justify-content-center">
                <button class="col-3 money__recommend" id="money__recommend" type="button">
                    {{format_number 50000}}
                </button>
                <button class="col-3 money__recommend mx-2" id="money__recommend" type="button">
                    {{format_number 100000}}
                </button>
                <button class="col-3 money__recommend" id="money__recommend" type="button">
                    {{format_number 200000}}
                </button>
            </div>
            <div class="form-group  container mt-3">
                <label for="transactionContent" class="">Nội dung giao dịch</label>
                <br>
                <div class="row">
                    <input class="col-12 transfer__container__money__input " id="transactionContent"
                           name="transactionContent">
                </div>
            </div>
            <div>
                <button class="btn mb-3 col-12 btn--continue" type="submit"
                        style="border-radius: 15px; background-color: #134B70; color:white; ">Tiếp tục
                </button>
            </div>

        </form>


    </div>
</div>
<script>
    document.getElementById('moneyInput').addEventListener('input', function (e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
        var value = e.target.value.replace(/,/g, '');
        if (!isNaN(value) && value.length > 0) {
            value = Number(value).toLocaleString('en');
        }
        e.target.value = value;
    });
</script>
<script>
    document.getElementById('input--container').addEventListener('click', function (event) {
        if (event.target.tagName === 'BUTTON' || event.target.closest('button')) {
            var button = event.target.tagName === 'BUTTON' ? event.target : event.target.closest('button');
            document.getElementById('moneyInput').value = button.innerText;
        }
        console.log(button.innerText); // You

    });
</script>

